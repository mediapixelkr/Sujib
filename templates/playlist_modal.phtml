<div id="playlist-modal" class="modal">
    <p><b>Playlist: <span id="playlist-title"></span></b></p>
    <p>Select videos to download:</p>
    <div id="playlist-videos" style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; margin-bottom: 10px;">
        <!-- Videos will be injected here -->
    </div>
    <div class="btn-container">
        <button type="button" class="btn" id="download-selected">Download Selected</button>
        <button type="button" class="btn close" rel="modal:close">Cancel</button>
    </div>
</div>
